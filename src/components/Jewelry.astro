---
const { link, name, galleryphoto, price } = Astro.props;
---


<a href={link}>
    <img src={galleryphoto} alt={name}>
        <div class="hover_text">
            <h2>{name}</h2>
            <h3>{price}</h3>
            <p id="readmore" class="hover-underline-animation">LÃ¦s mere</p>
        </div>
</a>



<style>
    p {
        margin-left: 20px;
        margin-right: 20px;
        max-width: 800px;
    }

    img {
        width: 100%;

    }


    .hover_text {
        display: none;
    }

    a {
        display: grid;
        grid-template-columns: 1fr;
        text-decoration: none;
        color: var(--beige);
    }

    #readmore {
        padding-top: 10px;
    }

    @media (min-width: 1000px) {
        p {
        font-size: var(--p_desktop);
        margin-inline: auto;
        }

        h2 {
        color: var(--beige);
        font-weight: 100;
        }

        h3 {
        color: var(--beige);
        }

    a {
        z-index: 3;
    }



    .hover_text {
        display: block;
        grid-row: 1/2;
        grid-column: 1/2;
        z-index: 2;
        margin-block: auto;
        visibility: hidden;
        color: var(--beige);
    }


    a:hover .hover_text{
        visibility: visible;
        transition: .5s ease;
    }

    a:hover img {
        opacity: 0.2;
        transition: .5s ease;
    }

    img {
        grid-row: 1/2;
        grid-column: 1/2;
        z-index: 0;
    }

    #readmore {
        color: var(--beige);
        font-size: var(--p_mobile);
        text-decoration: none;
    }

    #readmore:hover {
        text-decoration: underline;
    }


    }
</style>