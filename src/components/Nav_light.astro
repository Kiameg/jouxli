---
import logoLight from "../assets/icons/logo_lys.svg";
import { Image, Picture } from "@astrojs/image/components";
import logoDark from "../assets/icons/logo_dark.svg";
import "../stylesheets/global.css";
---

<script src="../scripts/menu.js"></script>
<nav>
  <Image class="logo" src={logoLight} alt="logo" format={"svg"} id="logo" />
  <Image class="logo logo--hide" src={logoDark} alt="logo" format={"svg"} id="logo" />
  <button>MENU</button>
</nav>
<div class="menu">
  <a href="/galleri/">SMYKKER</a>
  <a href="/om/">OM jOUXli</a>
  <a href="/kontakt/">KONTAKT</a>
</div>

<style>
  button {
    border: none;
    background-color: inherit;
    color: #f2e5d5;
    font-size: 2.1rem;
    font-family: "Heebo", sans-serif;
    margin-right: 20px;
    margin-top: 20px;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
    z-index: 1;
    position: relative;
  }

  #logo {
    margin-left: 20px;
    margin-top: 20px;
  }

  .menu a {
    font-size: 70px;
    font-family: "Habibi", serif;
    text-decoration: none;
    color: inherit;
    padding: 10px 0;
  }

  .menu {
    display: none;
    flex-direction: column;
    height: 100vh;
    width: 100vw;
    padding-top: 100px;
    padding-right: 550px;
    position: absolute;
    align-items: end;
    background: rgba(242, 229, 213, 0.75);
  }

  .menu_active {
    display: flex;
  }

  .logo--hide {
    display: none;
  }
  @media (max-width: 450px) {
    .menu a {
      font-size: 50px;
      width: 100%;
      text-align: center;
    }

    .menu {
      padding-right: 0;
      padding-top: 7rem;
    }
  }
</style>
