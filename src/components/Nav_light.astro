---
import logoLight from "../assets/icons/logo_lys.svg";
import { Image, Picture } from "@astrojs/image/components";
import "../stylesheets/global.css";
---

<script src="../scripts/menu.js"></script>
<nav>
  <Image class="logo" src={logoLight} alt="logo" width={125} format={"svg"} />
  <button>MENU</button>
</nav>
<div class="menu">
  <a href="">SMYKKER</a>
  <a href="">OM jOUXli</a>
  <a href="">KONTAKT</a>
</div>

<style>
  button {
    border: none;
    background-color: inherit;
    color: #f2e5d5;
    font-size: 1.8rem;
    font-family: "Heebo", sans-serif;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
  }

  .menu a {
    font-size: 70px;
    font-family: "Habibi", serif;
    text-decoration: none;
    color: inherit;
  }

  .menu {
    display: none;
    flex-direction: column;
    height: 100vh;
    width: 100vw;
    padding-right: 500px;
    position: absolute;
    align-items: end;
    background: rgba(242, 229, 213, 0.75);
  }

  .menu_active {
    display: flex;
  }
</style>
