<style>
  button {
    border: none;
    background-color: inherit;
    color: #3f352c;
    font-size: 2.1rem;
    font-family: "Heebo", sans-serif;
  }

  img {
    max-width: 100%;
    height: auto;
  }
  .logo--hide {
    display: none;
  }
  nav {
    display: flex;
    height: 130px;
    justify-content: space-between;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
    z-index: 1;
  }

  .menu a {
    font-size: 70px;
    font-family: "Habibi", serif;
    text-decoration: none;
    color: inherit;
    padding: 10px 0;
  }

  .menu {
    display: none;
    flex-direction: column;
    height: 100vh;
    width: 100vw;
    position: absolute;
    align-items: end;
    background: rgba(242, 229, 213, 0.75);
    z-index: 4;
  }

  ul {
    list-style: none;
    width: 1000px;
    margin-inline: auto;
    text-align: right;
    padding-top: 8em;
  }

  ul li {
    padding-bottom: 25px;
  }

  .menu_active {
    display: flex;
  }

  @media (max-width: 1000px) {
    .menu a {
      font-size: 50px;
      width: 100%;
      text-align: center;
      padding: 1rem;
    }
    .menu {
      padding-top: 6rem;
      padding-right: 0;
    }

    nav {
      padding: 0 1em;
  }
  }
</style>
