---
import Nav_dark from "../components/Nav_dark.astro";
import Footer_dark from "../components/Footer_dark.astro";
import { Image, Picture } from "@astrojs/image/components";
import lisePortrait from "../assets/img/portrait.jpg";
import backgroundOne from "../assets/icons/Smykke1.svg";
import backgroundTwodesk from "../assets/icons/Perler.png";
import backgroundTwomobile from "../assets/icons/Perler_kopi.png";
import backgroundThree from "../assets/icons/Perler2.svg";
import "../stylesheets/global.css";
---

<script src="../scripts/menu2.js"></script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>

  <body>
    <header>
      <Nav_dark />
    </header>
    <main>
      <h1>KONTAKT</h1>
      <div id="wrapper">
        <section class="kontakt_section">
          <br />
          <h3>ÅBNINGSTIDER</h3>
          <p>FREDAG 13-18</p>
          <br />
          <h3>ADRESSE</h3>
          <p>Jægersborg Allé 1G <br /> 2920 Charlottelund</p>
          <br />
          <p>TLF: 40 41 42 02</p>
          <p>MAIL: jouxli.dk@gmail.com</p>
        </section>
        <Image src={backgroundOne} width={392} height={517} alt="background" format={"svg"} class="backgroundOne" />
        <Image src={backgroundTwodesk} width={} height={190} alt="background" format={"svg"} class="backgroundTwodesk" />
        <Image src={backgroundTwomobile} width={} height={190} alt="background" format={"svg"} class="backgroundTwomobile" />
        <Image src={backgroundThree} alt="background" format={"svg"} class="backgroundThree" />
        <section class="portrait">
          <Image src={lisePortrait} alt="portrait" format={"webp"} class="lisePortrait" />
        </section>
      </div>
    </main>
    <Footer_dark />
  </body>
</html>

<style>
  #wrapper {
    max-width: 300px;
    margin: 0 auto;
  }
  .backgroundOne {
    position: absolute;
    top: 0;
    right: 0;
    z-index: -1;
  }

  .backgroundTwomobile {
    position: absolute;
    bottom: -14em;
    z-index: -1;
    left: 0;
  }
  .backgroundThree {
    display: none;
  }

  .backgroundTwodesk {
    display: none;
  }

  .lisePortrait {
    width: 100%;
    height: auto;
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
    width: 270;
    height: 344;
  }

  .portrait {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }


  @media (min-width: 1000px) {
    #wrapper {
      max-width: 1000px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-content: center;
      align-items: center;
      gap: 5em;
    }

    .backgroundOne {
      display: none;
    }

    .backgroundTwomobile {
      display: none;
    }

    .kontakt_section {
      order: 1;
    }
    .backgroundTwodesk {
      display: block;
      position: absolute;
      right: 12%;
      transform: scale(2);
      bottom: 0;
      z-index: -1;
    }

    .backgroundThree {
      display: block;
      position: absolute;
      left: 0;
      top: 0;
      z-index: -1;
    }

    .lisePortrait {
      width: 120%;
      order: 0;
    }
    h1 {
      font-size: var(--h1_desktop);
    }
    .portrait {
      max-width: 386px;
    }
  }
</style>
