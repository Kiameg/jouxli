---
import MainLayout from "../layouts/MainLayout.astro";
import Background from "../components/Background.astro";
import { Image, Picture } from "@astrojs/image/components";
import lisePortrait from "../assets/img/portrait.jpg";
/*
import backgroundOne from "../assets/icons/smykke1.svg";
import backgroundTwodesk from "../assets/icons/perler.png";
import backgroundTwomobile from "../assets/icons/perler_kopi.png";
import backgroundThree from "../assets/icons/perler2.svg";
*/
import "../stylesheets/global.css";
---

<script src="../scripts/menu2.js"></script>

<MainLayout>
  <h1>KONTAKT</h1>
  <div id="wrapper">
    <section class="kontakt_section">
      <h3>ÅBNINGSTIDER</h3>
      <p>FREDAG 13-18</p>
      <br />
      <h3>ADRESSE</h3>
      <p>Jægersborg Allé 1G <br /> 2920 Charlottelund</p>
      <br />
      <h3>KONTAKT</h3>
      <p>+45 40 41 42 02</p>
      <p>jouxli.dk@gmail.com</p>
    </section>
    <Background />
    <section class="portrait">
      <Image src={lisePortrait} alt="portrait" format={"webp"} class="lisePortrait" />
    </section>
  </div>
</MainLayout>

<style>
  #wrapper {
    max-width: 300px;
    margin: 0 auto;
  }
  .backgroundOne {
    position: absolute;
    top: 0;
    right: 0;
    z-index: -1;
  }

  .backgroundTwomobile {
    position: absolute;
    bottom: -14em;
    z-index: -1;
    left: 0;
  }
  .backgroundThree {
    display: none;
  }

  .backgroundTwodesk {
    display: none;
  }

  .lisePortrait {
    width: 100%;
    height: auto;
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
    width: 270;
    height: 344;
    z-index: -1;
    position: relative;
  }

  .portrait {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  @media (min-width: 1000px) {
    #wrapper {
      max-width: 1000px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-content: center;
      align-items: center;
      gap: 5em;
    }

    .backgroundOne {
      display: none;
    }

    .backgroundTwomobile {
      display: none;
    }

    .kontakt_section {
      order: 1;
      padding-left: 100px;
    }
    .backgroundTwodesk {
      display: block;
      position: absolute;
      right: 12%;
      transform: scale(2);
      bottom: 0;
      z-index: -1;
    }

    .backgroundThree {
      display: block;
      position: absolute;
      left: 0;
      top: 0;
      z-index: -1;
    }

    .lisePortrait {
      width: 120%;
      order: 0;
    }
    h1 {
      font-size: var(--h1_desktop);
    }
    h3 {
      font-size: var(--h3_desktop);
    }
    p {
      font-size: var(--p_desktop);
    }
    .portrait {
      max-width: 386px;
    }
  }
</style>
