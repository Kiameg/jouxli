---
import Nav_dark from "../components/Nav_dark.astro";
import Footer_dark from "../components/Footer_dark.astro";
import { Image, Picture } from "@astrojs/image/components";
import lisePortrait from "../assets/img/portrait.jpg";
import backgroundOne from "../assets/icons/Smykke1.svg";
import backgroundTwo from "../assets/icons/Perler.svg";
import backgroundThree from "../assets/icons/Perler2.svg";
import "../stylesheets/global.css";
---

<script src="../scripts/menu2.js"></script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>

  <body>
    <header>
      <Nav_dark />
    </header>
    <main>
      <h1 class="kontakt_h1">KONTAKT</h1>
      <div id="wrapper">
        <section class="kontakt_section">
          <br />
          <h3>ÅBNINGSTIDER</h3>
          <p>FREDAG 13-18</p>
          <br />
          <h3>ADRESSE</h3>
          <p>Jægersborg Allé 1G <br /> 2920 Charlottelund</p>
          <br />
          <p>TLF: 40 41 42 02</p>
          <p>MAIL: jouxli.dk@gmail.com</p>
        </section>
        <Image src={backgroundOne} width={392} height={517} alt="background" format={"svg"} class="backgroundOne" />
        <Image src={backgroundTwo} width={} height={190} alt="background" format={"svg"} class="backgroundTwo" />
        <Image src={backgroundThree} alt="background" format={"svg"} class="backgroundThree" />
        <section class="portrait">
          <Image src={lisePortrait} alt="portrait" format={"webp"} class="lisePortrait" />
        </section>
      </div>
    </main>
    <Footer_dark />
  </body>
</html>

<style>
  .kontakt_h1 {
    color: #3f352c;
    font-size: 56px;
    font-family: "Habibi", serif;
    text-align: center;
    padding-top: 3rem;
    padding-bottom: 2rem;
  }

  #wrapper {
    max-width: 300px;
    margin: 0 auto;
  }
  .backgroundOne {
    position: absolute;
    top: 0;
    right: 0;
    z-index: -1;
  }

  .backgroundTwo {
    position: absolute;
    bottom: -14em;
    z-index: -1;
    left: 0;
  }
  .backgroundThree {
    display: none;
  }

  .lisePortrait {
    width: 100%;
    height: auto;
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
    width: 270;
    height: 344;
  }

  .portrait {
    padding-top: 4rem;
    padding-bottom: 4rem;
    z-index: -3;
  }

  h3,
  p {
    font-family: "Heebo", sans-serif;
    padding-left: 0.1rem;
  }
  h3 {
    font-weight: lighter;
  }

  @media (min-width: 1000px) {
    #wrapper {
      max-width: 1000px;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: row-reverse;
      gap: 5em;
    }

    .backgroundOne {
      display: none;
    }

    .backgroundTwo {
      position: absolute;
      bottom: -10em;
      z-index: -1;
      left: initial;
      right: 0;
      -webkit-transform: scaleX(-1);
      transform: scaleX(-1);
    }

    .backgroundThree {
      display: block;
      position: absolute;
      left: 0;
      top: -1em;
      z-index: -1;
    }

    .lisePortrait {
      width: 100%;
    }

    .portrait {
      max-width: 386px;
    }
  }
</style>
